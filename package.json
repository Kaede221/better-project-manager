{
  "name": "better-project-manager",
  "displayName": "Better Project Manager",
  "description": "一个用于管理项目的VSCode扩展",
  "publisher": "kaedeshimizu",
  "icon": "resources/logo.png",
  "type": "commonjs",
  "keywords": [
    "better",
    "BPM",
    "project manager"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Kaede221/better-project-manager.git"
  },
  "author": {
    "name": "Kaede Shimizu",
    "email": "kaedeshimizu@qq.com"
  },
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "projectManagerSidebar",
          "title": "项目管理器",
          "icon": "./resources/project-icon.svg"
        }
      ]
    },
    "views": {
      "projectManagerSidebar": [
        {
          "id": "betterProjectManagerSidebar",
          "name": "项目列表",
          "icon": "./resources/project-icon.svg",
          "actionButtons": [
            {
              "command": "project-manager.addProject",
              "icon": "$(add)"
            },
            {
              "command": "project-manager.saveCurrentFolderAsProject",
              "icon": "$(save)"
            }
          ]
        }
      ]
    },
    "commands": [
      {
        "command": "project-manager.openProject",
        "title": "打开项目"
      },
      {
        "command": "project-manager.openProjectInCurrentWindow",
        "title": "在当前窗口打开项目"
      },
      {
        "command": "project-manager.openProjectInNewWindow",
        "title": "在新窗口打开项目"
      },
      {
        "command": "project-manager.renameProject",
        "title": "重命名项目"
      },
      {
        "command": "project-manager.addProject",
        "title": "添加项目",
        "icon": "$(add)"
      },
      {
        "command": "project-manager.deleteProject",
        "title": "删除项目"
      },
      {
        "command": "project-manager.changeIcon",
        "title": "修改项目图标"
      },
      {
        "command": "project-manager.editConfig",
        "title": "编辑配置文件",
        "icon": "$(edit)"
      },
      {
        "command": "project-manager.moveProjectToFolder",
        "title": "移动到文件夹"
      },
      {
        "command": "project-manager.removeFromFolder",
        "title": "从文件夹移除"
      },
      {
        "command": "project-manager.renameFolder",
        "title": "重命名文件夹"
      },
      {
        "command": "project-manager.deleteFolder",
        "title": "删除文件夹"
      },
      {
        "command": "project-manager.saveCurrentFolderAsProject",
        "title": "保存当前文件夹为项目",
        "icon": "$(save)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "project-manager.saveCurrentFolderAsProject",
          "when": "view == betterProjectManagerSidebar",
          "group": "navigation"
        },
        {
          "command": "project-manager.addProject",
          "when": "view == betterProjectManagerSidebar",
          "group": "navigation"
        },
        {
          "command": "project-manager.editConfig",
          "when": "view == betterProjectManagerSidebar",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "project-manager.openProjectInCurrentWindow",
          "when": "view == betterProjectManagerSidebar && viewItem == projectItem",
          "group": "navigation@1"
        },
        {
          "command": "project-manager.openProjectInNewWindow",
          "when": "view == betterProjectManagerSidebar && viewItem == projectItem",
          "group": "navigation@1"
        },
        {
          "command": "project-manager.renameProject",
          "when": "view == betterProjectManagerSidebar && viewItem == projectItem",
          "group": "navigation@1"
        },
        {
          "command": "project-manager.changeIcon",
          "when": "view == betterProjectManagerSidebar && viewItem == projectItem",
          "group": "navigation@2"
        },
        {
          "command": "project-manager.moveProjectToFolder",
          "when": "view == betterProjectManagerSidebar && viewItem == projectItem",
          "group": "navigation@2"
        },
        {
          "command": "project-manager.removeFromFolder",
          "when": "view == betterProjectManagerSidebar && viewItem == projectItem && projectFolder",
          "group": "navigation@2"
        },
        {
          "command": "project-manager.deleteProject",
          "when": "view == betterProjectManagerSidebar && viewItem == projectItem",
          "group": "navigation@3"
        },
        {
          "command": "project-manager.renameFolder",
          "when": "view == betterProjectManagerSidebar && viewItem == folderItem",
          "group": "navigation@1"
        },
        {
          "command": "project-manager.deleteFolder",
          "when": "view == betterProjectManagerSidebar && viewItem == folderItem",
          "group": "navigation@2"
        }
      ]
    },
    "configuration": {
      "title": "Better Project Manager",
      "properties": {
        "betterProjectManager.showProjectPath": {
          "type": "boolean",
          "default": false,
          "description": "是否在项目中显示项目路径"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "publish-market": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  }
}
